//C++ program to access the elements of an Array using pointers
#include <iostream>
using namespace std;

int main()
{
   int a[100],n;
   cout<<"Enter the size of array: ";
   cin>>n;
   cout << "Enter elements: ";

   for(int i = 0; i < n; i++)
      cin >> a[i];

   cout << "You entered: ";
   for(int i = 0; i < n; i++)
      cout << endl << *(a+ i);

   return 0;
}
